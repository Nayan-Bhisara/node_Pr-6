<%- include('Header') %>
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center justify-content-between">
                    <h4 class="page-title">Show Blogs</h4>
                    <button class="btn btn-primary me-5">
                        <a class="text-light" href="/add">Add</a>
                    </button>
                </div> 
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title m-b-0">Recent Posts</h4>
                        </div>
                        <div class="comment-widgets scrollable">
                            <div class="comment-widgets scrollable">
                            </div>
                            <% blog.map((val)=> { %>
                                <div class="d-flex flex-row comment-row">
                                    <div class="p-2 w-50"><img src="<%= val.image%>" alt="user" width="50"
                                            class="rounded w-100"></div>
                                    <div class="comment-text active w-100 pt-3">
                                        <h4 class="font-medium">
                                            <%= val.title%>
                                        </h4>
                                        <span class="m-b-15 d-block">
                                            <%= val.description%>
                                        </span>
                                        <div class="comment-footer">
                                            <button type="button" class="btn btn-cyan btn-sm">
                                                <a class="text-white" href="/editBlog?editId=<%= val.id%>">Edit</a>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm">
                                                <a class="text-white" href="/deleteBlog?deletId=<%= val.id%>">Delete</a>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('Footer') %>